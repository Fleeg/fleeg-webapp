mixin toppeople(avatar, name, followers, following=false)
  .col.px-0.p-3
    .d-flex.flex-row
      .pr-3
        a(href='#')
          img.border.rounded-circle.avatar-medium(src='https://cdn-images-1.medium.com/fit/c/80/80/' + avatar)
      .px-0.crop-text-block
        .h4.text-dark
          a.crop-text.crop-text-2(href='#')
            =name
        .d-block.mb-2
          small
            =followers
            |  Followers
        .d-block
          if following
            button.btn.btn-sm.btn-success Following
          else  
            button.btn.btn-sm.btn-outline-success Follow
